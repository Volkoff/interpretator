MODULE SimpleProcedures;
VAR x, y, result: INTEGER;

PROCEDURE Add(a, b: INTEGER): INTEGER;
BEGIN
    result := a + b;
END Add;

BEGIN
    x := 5;
    y := 3;
    Add(x, y);
    Write("Sum of ");
    Write(x);
    Write(" and ");
    Write(y);
    Write(" is ");
    Write(result);
    WriteLn();
END SimpleProcedures.
