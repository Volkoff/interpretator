MODULE IndirectRecursion;
VAR n: INTEGER;

PROCEDURE IsEven(x: INTEGER): INTEGER;
BEGIN
    IF x = 0 THEN
        RETURN 1;
    ELSE
        RETURN IsOdd(x - 1);
    END;
END IsEven;

PROCEDURE IsOdd(x: INTEGER): INTEGER;
BEGIN
    IF x = 0 THEN
        RETURN 0;
    ELSE
        RETURN IsEven(x - 1);
    END;
END IsOdd;

BEGIN
    n := 5;
    Write("Is 5 even? ");
    Write(IsEven(n));
    WriteLn();
    Write("Is 5 odd? ");
    Write(IsOdd(n));
    WriteLn();
END IndirectRecursion.
