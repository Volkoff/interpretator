MODULE Arithmetic;
VAR a, b, sum, product: INTEGER;
    x, y, result: REAL;
BEGIN
    a := 10;
    b := 20;
    sum := a + b;
    product := a * b;
    
    x := 3.14;
    y := 2.0;
    result := x * y;
    
    Write("Sum: ");
    Write(sum);
    WriteLn();
    Write("Product: ");
    Write(product);
    WriteLn();
    Write("Real result: ");
    Write(result);
    WriteLn();
END Arithmetic.
